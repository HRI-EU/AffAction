<Graph xmlns:xi="http://www.w3.org/2003/XInclude"
       resourcePath="${SIT}/Data/RobotMeshes/1.0/data"
       name="JacoDefaultPoseArmsHigh"
       usage="
&#xA;  Configuration file to load the Affordance Action scenario. To change the
&#xA;  robot configuration from low arm mount to shoulder arm mount, just
&#xA;  change the included xml file from g_robot_arms_low.xml to g_robot_arms_high.xml,
&#xA;  and adjust the model state from JacoDefaultPoseArmsLow to JacoDefaultPoseArmsHigh.
&#xA;  "
>

    <ActionSequence name="1" text="double_get coke glass; pour coke glass; double_put coke glass" />
    <ActionSequence name="2" text="get coke; pour coke glass; put coke" />

    <!-- The Aruco markers are 1cm away from the borders of the table. -->
    <xi:include href="../TwoArmJaco7/g_robo.xml"/>




    <Body name="table" prev="lab" rigid_body_joints="0.58 0 0.7 0 0 0" physics="kinematic" >
        <Shape type="FRAME" scale="0.2"/>
        <Shape type="BOX" extents="0.8 1.4 0.02" transform="0 0 -0.01 0 0 0" graphics="true"
               distance="true" textureFile="Smile/textures/table.jpg"/>
    </Body>

    <AffordanceModel body="table">
        <Supportable frame="table" extentsX="0.6" extentsY="0.8" />
    </AffordanceModel>



    <Group prev="table" rigid_body_joints="0 -0.2 0 0 0 90">
		
      <Body name="coke" color="BLACK_RUBBER">
        <Shape type="MESH" meshFile="Smile/object_models/cola_bottle_1/cola_bottle_1.stl" distance="false" />
        <Shape type="CYLINDER" length="0.16" radius="0.0325" graphics="true" transform="0 0 0.085 0 0 0"/>
        <Shape type="CYLINDER" length="0.08" radius="0.015" graphics="true" distance="true"
               transform="0 0 0.1875 0 0 0"/>

        <Shape type="FRAME" marker="true" markerName="aruco_3" extents="0.0415 0.0415 0" scale="0.1"
               transform="0.0325 0 0.118 0 90 0"/>
        <Shape type="BOX" extents="0.0415 0.0415 0.0001" graphics="true" distance="false"
               textureFile="Smile/textures/aruco/4x4marker_3.jpg" transform="0.0325 0 0.118 0 90 0"/>
      </Body>

      <Body name="coke_tip" prev="coke" was_transform="0 0 0.227 180 0 0" transform="0 0 0.227 0 0 0" >
        <Shape type="FRAME" scale="0.1"/>
      </Body>

      <Body name="coke_grip" prev="coke" transform="0 0 0.12 0 0 0">
        <Shape type="FRAME" scale="0.1"/>
      </Body>


      <AffordanceModel body="coke" id="id_6332b31ef325ac88b0b6f706">
        <PowerGraspable frame="coke_grip" />
        <PincerGraspable name="bottle_1" frame="coke_grip" />
        <Twistable name="bottle_1" frame="coke_grip" />
        <Pourable name="bottle_1_tip" frame="coke_tip" />
        <Containable name="bottle_1_inside" frame="coke_tip" />
        <xxxSupportable name="coke_surf" frame="coke_surf" />
        <Stackable name="coke" frame="coke" />
      </AffordanceModel>

    </Group>
	
	
	

	
	
	
	
    <Group prev="table" rigid_body_joints="0 0.2 0 0 0 90">
    <Body name="glass" color="RED">
        <Shape type="BOX" extents="0.054 0.054 0.044" transform="0 0 0.022 0 0 0" graphics="true"/>
        <Shape type="CYLINDER" length="0.102" radius="0.035" graphics="true" transform="0 0 0.095 0 0 0"/>
        <Shape type="FRAME" marker="true" markerName="aruco_4" extents="0.0415 0.0415 0" scale="0.1"
               transform="0.027 0 0.03 0 90 0"/>
        <Shape type="BOX" extents="0.0415 0.0415 0.0001" graphics="true" distance="false"
               textureFile="Smile/textures/aruco/4x4marker_4.jpg" transform="0.027 0 0.03 0 90 0"/>
        <Shape type="MESH" meshFile="Smile/object_models/glass_1/glass_1.stl" scale="1 1 1.2" />
    </Body>

    <Body name="glass_grip" prev="glass" transform="0 0 0.08 0 0 0">
        <Shape type="FRAME" scale="0.1"/>
    </Body>

    <Body name="glass_tip" prev="glass" transform="0 0 0.175 0 0 0">
        <Shape type="FRAME" scale="0.1"/>
    </Body>

    <Body name="glass_push" prev="glass" transform="0 0 0.15 0 -40 0">
        <Shape type="FRAME" scale="0.1"/>
    </Body>

    <Body name="glass_inside" prev="glass" transform="0 0 0.05 0 0 0">
        <Shape type="FRAME" scale="0.1"/>
    </Body>

    <AffordanceModel body="glass" id="id_6332b31ef325ac88b0b6f706">
        <Stackable frame="glass"/>
        <Pourable frame="glass_tip"/>
        <Containable frame="glass_tip"/>
        <Supportable frame="glass_tip"/>
        <PowerGraspable frame="glass_grip" />
        <PointPushable frame="glass_push" />
    </AffordanceModel>
    </Group>
	<!--
    <Group prev="table" rigid_body_joints="0 -0.45 0 0 0 90">
        <xi:include href="g_cereal_box_1.xml"/>
    </Group>
	-->

    <model_state model="JacoDefaultPoseArmsHigh" time_stamp="">
        <joint_state joint="j2s7s300_joint_1_right" position="20"/>
        <joint_state joint="j2s7s300_joint_2_right" position="280"/>
        <joint_state joint="j2s7s300_joint_3_right" position="-90"/>
        <joint_state joint="j2s7s300_joint_4_right" position="70"/>
        <joint_state joint="j2s7s300_joint_5_right" position="0"/>
        <joint_state joint="j2s7s300_joint_6_right" position="200"/>
        <joint_state joint="j2s7s300_joint_7_right" position="0"/>
        <joint_state joint="j2s7s300_joint_finger_1_right" position="10"/>
        <joint_state joint="j2s7s300_joint_finger_2_right" position="10"/>
        <joint_state joint="j2s7s300_joint_finger_3_right" position="10"/>

        <joint_state joint="j2s7s300_joint_1_left" position="-20"/>
        <joint_state joint="j2s7s300_joint_2_left" position="80"/>
        <joint_state joint="j2s7s300_joint_3_left" position="90"/>
        <joint_state joint="j2s7s300_joint_4_left" position="290"/>
        <joint_state joint="j2s7s300_joint_5_left" position="0"/>
        <joint_state joint="j2s7s300_joint_6_left" position="160"/>
        <joint_state joint="j2s7s300_joint_7_left" position="0"/>
        <joint_state joint="j2s7s300_joint_finger_1_left" position="10"/>
        <joint_state joint="j2s7s300_joint_finger_2_left" position="10"/>
        <joint_state joint="j2s7s300_joint_finger_3_left" position="10"/>
    </model_state>

    <BroadPhase DistanceThreshold="0.001">
        <Tree root="upperarm_left" />
        <Tree root="upperarm_right" />
        <Body name="center_post_link" />
        <Body name="screen_link" />
        <Body name="head_kinect_link" />
        <Body name="base_link" />
    </BroadPhase>

</Graph>
