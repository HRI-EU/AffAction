<Graph xmlns:xi="http://www.w3.org/2003/XInclude" name="default" resourcePath="config/xml/AffAction;install/config/xml/AffAction" >

  <ActionSequence name="1" text="get bottle_of_cola;pour bottle_of_cola glass_red;put bottle_of_cola;get glass_red;pass glass_red Felix" />
  <ActionSequence name="2" text="get bottle_of_cola;pour bottle_of_cola glass_blue;put bottle_of_cola far glass_blue near box_of_cereal;get glass_blue;put glass_blue near Johnnie;get glass_blue;put glass_blue near Felix" />
  <ActionSequence name="3" text="get bottle_of_cola;pour bottle_of_cola glass_blue;put bottle_of_cola;get glass_blue;put glass_blue;get glass_blue;put glass_blue near Felix" />
  <ActionSequence name="4" text="pose watchit_eye fast; pose watchit_point fast; pose default_up fast" />
  <ActionSequence name="5" text="get glass_red + gaze glass_red; put glass_red far bottle_of_cola + get bottle_of_cola + gaze bottle_of_cola; get glass_red; pour bottle_of_cola glass_red duration 25; put bottle_of_cola + put glass_red near Felix + gaze Felix; pose default" />

	<!-- The optional grapchics window camera perspective when starting up. -->
  <Body name="default_camera_view" transform="3.1 1.1 3.2   13 -30 -156"/>

  <!-- The Aruco markers are 1cm away from the borders of the table. -->
  <Body color="PEWTER" name="aruco_base" rigid_body_joints="true">
    <Shape type="FRAME" extents="0.14 0.14 0"      marker="true"    markerName="aruco_1" scale="0.2" transform="0.16 0.61 0.70025 0 0 0" />
    <Shape type="BOX"   extents="0.14 0.14 0.0005" distance="false" physics="false" graphics="true"  transform="0.16 0.61 0.70025 0 0 0" textureFile="textures/4x4marker_1.jpg" />
    <Shape type="BOX"   extents="3.0 4.0 0.04"     distance="false" physics="true"  graphics="true"  transform="0 0 -0.02 0 0 0"         color="PEWTER" no_textureFile="textures/floor.jpg" />
    <Shape scale="0.5" type="FRAME"/>
  </Body>

  <!-- The model for a simple camera. -->
  <Body color="LIGHTGRAY" name="camera_0" prev="aruco_base" rigid_body_joints="-0.924 0.530 1.473  166.341 48.556 107.392" >
    <Shape distance="true" extents="0.1 0.05 0.02" graphics="true" physics="true" transform="0 0 0 0 0 0" type="BOX"/>
    <Shape distance="false" extents="0.03 0.01 0.015" graphics="true" physics="false" transform="0 -0.03 0 0 0 0" type="BOX"/>
    <Shape distance="false" graphics="true" length="0.01" physics="false" radius="0.02" transform="0 0 0.015 0 0 0" type="CYLINDER"/>
    <Shape graphics="true" scale="0.2" type="FRAME"/>
  </Body>
  <AffordanceModel body="camera_0" name="camera" types="camera.n.01">
    <Supportable frame="camera_0"/>
  </AffordanceModel>

  <!-- The model of the robot. -->
  <Group prev="aruco_base" transform="-0.8 0 0 0 0 0">
    <xi:include href="../TwoArmJaco7/g_robo.xml" />
  </Group>

  <!--  Agent models -->
  <Group prev="aruco_base" name="Felix" color="RED" transform="0 -1 0.5 0 0 -90" >
    <xi:include href="g_human_agent.xml"/>
  </Group>

  <Group prev="aruco_base" name="Daniel" color="ORANGE" transform="0.7 0 0.5 0 0 0" >
    <xi:include href="g_human_agent.xml"/>
  </Group>

  <!--  Table and objects -->
  <Group prev="aruco_base" color="GRAY" rigid_body_joints="-0.15 0 0.7 0 0 0" >
    <xi:include href="g_table.xml"/>
  </Group>

  <Group prev="table_grid_1_4" name="_cola" color="BLACK_RUBBER" rigid_body_joints="0 0 0 0 0 0" >
    <xi:include href="../scene/g_bottle_rewe.xml"/>
  </Group>

  <Group prev="table_grid_2_3" name="_fanta" color="YELLOW" rigid_body_joints="true" >
    <xi:include href="../scene/g_bottle_rewe.xml"/>
  </Group>

  <Group prev="table" name="_red" color="RED" rigid_body_joints="-0.15 -0.15 0 0 0 0" >
    <xi:include href="../scene/g_glass_quadratic.xml"/>
  </Group>

  <Group prev="table" name="_blue" color="BLUE" rigid_body_joints="-0.15 0.3 0 0 0 0" >
    <xi:include href="../scene/g_glass_quadratic.xml"/>
  </Group>

  <Group prev="table_grid_2_2" name="_coke_zero" color="GREEN" rigid_body_joints="true" >
    <xi:include href="../scene/g_bottle_half_liter.xml"/>
  </Group>

  <Group prev="table" name="5" color="GREEN" rigid_body_joints="0.3 0.3 0 0 0 0" >
    <xi:include href="g_iphone5.xml"/>
  </Group>
	
  <Group prev="table" name="_cereal" color="WHITE" rigid_body_joints="0.03 0.375 0 0 0 0" >
    <xi:include href="../scene/g_cereal_box.xml"/>
  </Group>
	
  <Group prev="table_grid_0_7" name="_softdrink" color="WHITE" rigid_body_joints="true" >
    <xi:include href="../scene/g_softdrink_bottle.xml"/>
  </Group>
		
  <model_state model="default" time_stamp="0">
    <joint_state joint="j2s7s300_joint_1_right" position="20"/>
    <joint_state joint="j2s7s300_joint_2_right" position="280"/>
    <joint_state joint="j2s7s300_joint_3_right" position="-90"/>
    <joint_state joint="j2s7s300_joint_4_right" position="70"/>
    <joint_state joint="j2s7s300_joint_5_right" position="0"/>
    <joint_state joint="j2s7s300_joint_6_right" position="200"/>
    <joint_state joint="j2s7s300_joint_7_right" position="0"/>
    <joint_state joint="j2s7s300_joint_finger_1_right" position="10"/>
    <joint_state joint="j2s7s300_joint_finger_2_right" position="10"/>
    <joint_state joint="j2s7s300_joint_finger_3_right" position="10"/>
    <joint_state joint="j2s7s300_joint_1_left" position="-20"/>
    <joint_state joint="j2s7s300_joint_2_left" position="80"/>
    <joint_state joint="j2s7s300_joint_3_left" position="90"/>
    <joint_state joint="j2s7s300_joint_4_left" position="290"/>
    <joint_state joint="j2s7s300_joint_5_left" position="0"/>
    <joint_state joint="j2s7s300_joint_6_left" position="160"/>
    <joint_state joint="j2s7s300_joint_7_left" position="0"/>
    <joint_state joint="j2s7s300_joint_finger_1_left" position="10"/>
    <joint_state joint="j2s7s300_joint_finger_2_left" position="10"/>
    <joint_state joint="j2s7s300_joint_finger_3_left" position="10"/>
  </model_state>


  <xi:include href="g_modelstates.xml"/>
  <xi:include href="g_collisionmodel.xml"/>
	
</Graph>
