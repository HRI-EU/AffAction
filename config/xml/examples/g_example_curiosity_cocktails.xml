<Graph xmlns:xi="http://www.w3.org/2003/XInclude" name="default" >

	<ActionSequence name="1" text="get glass_green; shake glass_green" />
	<ActionSequence name="2" text="get glass_green; inspect glass_green" />
	<ActionSequence name="3" text="get glass_blue; inspect glass_blue" />
	<ActionSequence name="4" text="get bottle_of_fanta; move bottle_of_fanta above glass_green; pour glass_green bottle_of_fanta; put bottle_of_fanta table; pose default" />
	<ActionSequence name="5" text="get bottle_of_fanta; move bottle_of_fanta above glass_green; pour bottle_of_fanta glass_green; put bottle_of_fanta table frame table_grid_0_1; pose default" />
	<ActionSequence name="6" text="get bottle_of_fanta; move bottle_of_fanta above glass_green; pour bottle_of_fanta glass_green; put bottle_of_fanta table frame table_grid_0_3; pose default" />

  <!-- The optional grapchics window camera perspective when starting up. -->
  <Body name="default_camera_view" transform="-1.8 -2.5 3.0 -34 21 66" />

  <!-- The Aruco markers are 1cm away from the borders of the table. -->
  <Body name="aruco_base" rigid_body_joints="true" color="PEWTER" >
    <Shape extents="0.14 0.14 0" marker="true" markerName="aruco_0" scale="0.2" transform="0.31 0.61 0.70025 0 0 0" type="FRAME"/>
    <Shape type="BOX" extents="3.0 4.0 0.04" transform="0 0 -0.02 0 0 0" color="PEWTER" no_textureFile="Smile/textures/floor.jpg"
            graphics="true" physics="true" distance="false"/>
    <Shape scale="0.5" type="FRAME"/>
  </Body>

  <!-- The model for a simple camera. -->
  <Body color="LIGHTGRAY" name="camera_0" prev="aruco_base" rigid_body_joints="-0.796 -0.037 1.678 -177.274 52.690 88.299">
    <Shape distance="true" extents="0.1 0.05 0.02" graphics="true" physics="true" transform="0 0 0 0 0 0" type="BOX"/>
    <Shape distance="false" extents="0.03 0.01 0.015" graphics="true" physics="false" transform="0 -0.03 0 0 0 0" type="BOX"/>
    <Shape distance="false" graphics="true" length="0.01" physics="false" radius="0.02" transform="0 0 0.015 0 0 0" type="CYLINDER"/>
    <Shape graphics="true" scale="0.2" type="FRAME"/>
  </Body>
  <AffordanceModel body="camera_0" name="camera" types="camera.n.01">
    <Supportable frame="camera_0"/>
  </AffordanceModel>

  <!-- The model of the robot. -->
  <Group prev="aruco_base" transform="-0.87 0 0 0 0 0">
    <xi:include href="../TwoArmJaco7/g_robo.xml" />
  </Group>

  <!--  Table with grid -->
  <Group prev="aruco_base" rigid_body_joints="-0.22 0 0.7 0 0 0" >
    <xi:include href="../scene/g_table_with_grid_140x80.xml"/>
  </Group>

  <!--  Cocktails scenario -->
  <Group prev="table" >
    <xi:include href="../cocktails/g_spezi_with_agent.xml"/>
  </Group>

	<!-- The agent sitting in front of the robot. -->
  <Group prev="aruco_base" name="Sheekeemy-sun" color="ORANGE" transform="0.7 0 0.5 0 0 0" >
    <xi:include href="g_human_agent.xml"/>
  </Group>

  <!-- All poses. The one refered to in the above Graph attribute must exist in this file. -->
  <model_state model="default" time_stamp="0">
	<joint_state joint="j2s7s300_joint_1_right" position="20"/>
	<joint_state joint="j2s7s300_joint_2_right" position="280"/>
	<joint_state joint="j2s7s300_joint_3_right" position="-90"/>
	<joint_state joint="j2s7s300_joint_4_right" position="70"/>
	<joint_state joint="j2s7s300_joint_5_right" position="0"/>
	<joint_state joint="j2s7s300_joint_6_right" position="200"/>
	<joint_state joint="j2s7s300_joint_7_right" position="0"/>
	<joint_state joint="j2s7s300_joint_1_left" position="-20"/>
	<joint_state joint="j2s7s300_joint_2_left" position="80"/>
	<joint_state joint="j2s7s300_joint_3_left" position="90"/>
	<joint_state joint="j2s7s300_joint_4_left" position="290"/>
	<joint_state joint="j2s7s300_joint_5_left" position="0"/>
	<joint_state joint="j2s7s300_joint_6_left" position="160"/>
	<joint_state joint="j2s7s300_joint_7_left" position="0"/>
  </model_state>

  <xi:include href="g_modelstates.xml"/>
  <xi:include href="g_collisionmodel.xml"/>
	
</Graph>
