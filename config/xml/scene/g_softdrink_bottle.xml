<Graph>
  
  <Body name="bottle_of" physics="dynamic" mass="0.5" >
    <Shape type="MESH" meshFile="assets/softdrink.obj" graphics="true" distance="false" physics="false" render_material="true"/>
    <noShape type="MESH" meshFile="assets/softdrink_collision.obj" graphics="false" distance="true" physics="true" />
    <Shape type="SSL" length="0.085" radius="0.035" distance="true" graphics="false" physics="true" transform="0 0 0.04 0 0 0"/>
    <Shape type="SSL" length="0.17"  radius="0.028" distance="true" graphics="false" physics="true" transform="0 0 0.04 0 0 0"/>
    <Shape type="SSL" length="0.2"   radius="0.015" distance="true" graphics="false" physics="true" transform="0 0 0.04 0 0 0"/>
  </Body>
  
  <Body name="tip_bottle_of" prev="bottle_of" transform="0 0 0.256 0 0 0">
    <Shape scale="0.1" type="FRAME"/>
  </Body>

  <Body name="topgrasp_bottle_of" prev="tip_bottle_of" transform="0 0 0 0 90 0">
	<Shape scale="0.1" type="FRAME"/>
  </Body>

  <Body name="grip_bottle_of" prev="bottle_of" transform="0 0 0.16 0 0 0">
    <Shape scale="0.1" type="FRAME"/>
  </Body>
  
  <Body name="inside_bottle_of" prev="bottle_of" transform="0 0 0.01 0 0 0">
    <Shape scale="0.1" type="FRAME"/>
  </Body>
  
  <AffordanceModel body="bottle_of" types="bottle">
    <Stackable frame="bottle_of"/>
    <Pourable frame="tip_bottle_of"/>
    <PincerGraspable frame="topgrasp_bottle_of"/>
	<Twistable frame="tip_bottle_of"/>
    <PowerGraspable frame="grip_bottle_of"/>
    <PointPokable frame="tip_bottle_of"/>
    <Containable frame="tip_bottle_of" max_volume="0.5">
      <Ingredient name="" volume="0"/>
    </Containable>
    <Openable open="true"/>
  </AffordanceModel>
 
</Graph>

