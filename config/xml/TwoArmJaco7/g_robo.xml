<Graph xmlns:xi="http://www.w3.org/2003/XInclude" resourcePath="${SIT}/Data/RobotMeshes/1.0/data" name="default" >

  <!-- Aluminum structure including PTU. -->
  <xi:include href="g_item_base.xml"/>

  <!-- The new head. Exchange g_head_v2.xml against g_head_v1.xml for old head (and remove gaze model) -->
  <Group  prev="ptu_tool_link" transform="0 0 0 0 0 -90" >
    <xi:include href="g_head_v2.xml" />
  </Group>

  <!-- Shoulder adaptors and arms with hands. -->
  <Body name="adapter_shoulder" prev="base_link" transform="-0.115 0 1.1052 0 0 0" >
    <Shape type="MESH" meshFile="hri_scitos_description/Metralabs_ArmAdapter_V2.stl" scale="0.001" transform="0 0.04 -0.115 0 0 -90" />
  </Body>

  <Body name="adapter_shoulder_right_2" prev="adapter_shoulder" transform="-0.048206 -0.043874 0.028528 70 0 90" >
  </Body>

  <Body name="adapter_shoulder_right_3" prev="adapter_shoulder_right_2" transform="0 0 0 30 0 -8.444">
    <Shape type="SSL" radius="0.05" length="0.15" color="RED" distance="true" />
  </Body>

  <Group name="_right" prev="adapter_shoulder_right_3" transform="0 0 0 0 0 -90">
    <xi:include href="g_kinova_ulw2_sph_7dof.xml"/>
  </Group>

  <Body name="adapter_shoulder_left_2" prev="adapter_shoulder" transform="-0.048206 0.043874 0.028528 -70 0 90">
  </Body>

  <Body name="adapter_shoulder_left_3" prev="adapter_shoulder_left_2" transform="0 0 0 30 0 8.444">
    <Shape type="SSL" radius="0.05" length="0.15" color="RED" distance="true" />
  </Body>

  <Group name="_left" prev="adapter_shoulder_left_3" transform="0 0 0 0 0 -90" >
    <xi:include href="g_kinova_ulw2_sph_7dof.xml"/>
  </Group>

  <xi:include href="g_hand_left.xml"/>
  <xi:include href="g_hand_right.xml"/>

  
  
  <!-- Face mesh (testing). -->
  <Body name="face" rigid_body_joints="true">
    <Shape type="MESH" meshFile="hri_scitos_description/FaceMesh-holes-478.obj" resizeable="true" graphics="false" distance="false" physics="false"/>
    <Shape type="FRAME" scale="1"/>
  </Body>

  <!-- The gaze model of the robot (testing).
  <Group prev="head_shell" transform="0 0 0 0 0 0">
    <xi:include href="g_gazemodel.xml" />
  </Group>

  <Body name="GazePoint" rigid_body_joints="1.05 0.0 0.35 0 0 0" >
    <Shape type="SPHERE" radius="0.05" graphics="true" color="RED" />
  </Body>
  -->


  <Manipulator body="head_kinect_link" types="head">
    <GazeCapability frame="head_kinect_lens" />
  </Manipulator>

  <Agent body="Johnnie" types="robot" name="Johnnie" >
    <Component manipulator="hand_left_robot" />
    <Component manipulator="hand_right_robot" />
    <Component manipulator="head" />
  </Agent>

  <!-- All poses. The one refered to in the above Graph attribute must exist in this file. -->
  <model_state model="default" time_stamp="0">
    <joint_state joint="ptu_pan_joint" position="0" />
    <joint_state joint="ptu_tilt_joint" position="15" />
    <joint_state joint="LeftEyeThY" position="-1.625565" />
    <joint_state joint="LeftEyeThZ" position="0.606686" />
    <joint_state joint="LeftPupilX" position="0.04" />
    <joint_state joint="LeftPupilThX" position="-0.000893" />
